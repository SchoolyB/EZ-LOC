const CLOSING_TRIPLE_APOSTROPHE string = "'''"

//Ruby
const OPENING_EQUALS_BEGIN string = "=begin"
const CLOSING_EQUALS_END string = "=end"

//Perl
const OPENING_EQUALS_POD string = "=pod"
const CLOSING_EQUALS_CUT string = "=cut"

//Lua
const OPENING_DOUBLE_DASH_BRACKET string = "--[["
